.equ CHECKED_MUSHROOMS,  FLAG_TEMP_1
.equ HAS_BIG_MUSHROOM,   FLAG_TEMP_2
.equ HAS_TINY_MUSHROOMS, FLAG_TEMP_3
.equ HAS_BOTH_MUSHROOMS, FLAG_TEMP_4

CinnabarIsland_PokemonLab_Entrance_MapScripts::
	map_script MAP_SCRIPT_ON_TRANSITION, CinnabarIsland_PokemonLab_Entrance_OnTransition
	.byte 0

CinnabarIsland_PokemonLab_Entrance_OnTransition::
	call_if_eq VAR_MAP_SCENE_CINNABAR_ISLAND_POKEMON_LAB_EXPERIMENT_ROOM_REVIVE_STATE, 1, CinnabarIsland_PokemonLab_Entrance_EventScript_ReadyFossil
	end

CinnabarIsland_PokemonLab_Entrance_EventScript_ReadyFossil::
	setvar VAR_MAP_SCENE_CINNABAR_ISLAND_POKEMON_LAB_EXPERIMENT_ROOM_REVIVE_STATE, 2
	return

CinnabarIsland_PokemonLab_Entrance_EventScript_Scientist::
	msgbox CinnabarIsland_PokemonLab_Entrance_Text_StudyMonsExtensively, MSGBOX_NPC
	end

CinnabarIsland_PokemonLab_Entrance_EventScript_DrFujiPhoto::
	msgbox CinnabarIsland_PokemonLab_Entrance_Text_PhotoOfLabFounderDrFuji, MSGBOX_SIGN
	end

CinnabarIsland_PokemonLab_Entrance_EventScript_MeetingRoomSign::
	msgbox CinnabarIsland_PokemonLab_Entrance_Text_MeetingRoomSign, MSGBOX_SIGN
	end

CinnabarIsland_PokemonLab_Entrance_EventScript_RAndDRoomSign::
	msgbox CinnabarIsland_PokemonLab_Entrance_Text_RAndDRoomSign, MSGBOX_SIGN
	end

CinnabarIsland_PokemonLab_Entrance_EventScript_TestingRoomSign::
	msgbox CinnabarIsland_PokemonLab_Entrance_Text_TestingRoomSign, MSGBOX_SIGN
	end

CinnabarIsland_PokemonLab_Entrance_EventScript_MoveManiac::
	goto_if_questlog EventScript_ReleaseEnd
	special QuestLog_CutRecording
	lock
	faceplayer
	clearflag HAS_BIG_MUSHROOM
	clearflag HAS_TINY_MUSHROOMS
	clearflag HAS_BOTH_MUSHROOMS
	goto_if_set CHECKED_MUSHROOMS, CinnabarIsland_PokemonLab_Entrance_EventScript_CheckPlayerHasMushrooms
	msgbox CinnabarIsland_PokemonLab_Entrance_Text_TeachMonMoveForMushroom
	setflag CHECKED_MUSHROOMS
	goto CinnabarIsland_PokemonLab_Entrance_EventScript_CheckPlayerHasMushrooms
	end

CinnabarIsland_PokemonLab_Entrance_EventScript_CheckPlayerHasMushrooms::
	checkitem ITEM_HEART_SCALE
	call_if_eq VAR_RESULT, TRUE, CinnabarIsland_PokemonLab_Entrance_EventScript_SetHasBigMushroom
	checkitem ITEM_TINY_MUSHROOM, 2
	call_if_eq VAR_RESULT, TRUE, CinnabarIsland_PokemonLab_Entrance_EventScript_SetHasTinyMushrooms
	goto_if_set HAS_BIG_MUSHROOM, CinnabarIsland_PokemonLab_Entrance_EventScript_CheckAlsoHasTinyMushrooms
	goto_if_set HAS_TINY_MUSHROOMS, CinnabarIsland_PokemonLab_Entrance_EventScript_CheckAlsoHasBigMushroom
	goto CinnabarIsland_PokemonLab_Entrance_EventScript_EndTutorMove
	end

CinnabarIsland_PokemonLab_Entrance_EventScript_CheckAlsoHasTinyMushrooms::
	call_if_set HAS_TINY_MUSHROOMS, CinnabarIsland_PokemonLab_Entrance_EventScript_SetHasBothMushrooms
	goto CinnabarIsland_PokemonLab_Entrance_EventScript_AskTutorMon
	end

CinnabarIsland_PokemonLab_Entrance_EventScript_CheckAlsoHasBigMushroom::
	call_if_set HAS_BIG_MUSHROOM, CinnabarIsland_PokemonLab_Entrance_EventScript_SetHasBothMushrooms
	goto CinnabarIsland_PokemonLab_Entrance_EventScript_AskTutorMon
	end

CinnabarIsland_PokemonLab_Entrance_EventScript_AskTutorMon::
	msgbox CinnabarIsland_PokemonLab_Entrance_Text_WantMeToTeachMove, MSGBOX_YESNO
	goto_if_eq VAR_RESULT, NO, CinnabarIsland_PokemonLab_Entrance_EventScript_EndTutorMove
	goto CinnabarIsland_PokemonLab_Entrance_EventScript_ChooseMonToTutor
	end

CinnabarIsland_PokemonLab_Entrance_EventScript_ChooseMonToTutor::
	msgbox CinnabarIsland_PokemonLab_Entrance_Text_TutorWhichMon
	special ChooseMonForMoveRelearner
	waitstate
	goto_if_ge VAR_0x8004, PARTY_SIZE, CinnabarIsland_PokemonLab_Entrance_EventScript_EndTutorMove
	special IsSelectedMonEgg
	goto_if_eq VAR_RESULT, TRUE, CinnabarIsland_PokemonLab_Entrance_EventScript_CantTutorEgg
	goto_if_eq VAR_0x8005, 0, CinnabarIsland_PokemonLab_Entrance_EventScript_NoMoveToTutorMon
	goto CinnabarIsland_PokemonLab_Entrance_EventScript_ChooseMoveToTeach
	end

CinnabarIsland_PokemonLab_Entrance_EventScript_ChooseMoveToTeach::
	msgbox CinnabarIsland_PokemonLab_Entrance_Text_TeachWhichMove
	special TeachMoveRelearnerMove
	waitstate
	goto_if_eq VAR_0x8004, 0, CinnabarIsland_PokemonLab_Entrance_EventScript_ChooseMonToTutor
	goto_if_set HAS_BOTH_MUSHROOMS, CinnabarIsland_PokemonLab_Entrance_EventScript_ChooseMushroom
	goto_if_set HAS_BIG_MUSHROOM, CinnabarIsland_PokemonLab_Entrance_EventScript_GiveBigMushroom
	goto_if_set HAS_TINY_MUSHROOMS, CinnabarIsland_PokemonLab_Entrance_EventScript_GiveTinyMushrooms
	end

CinnabarIsland_PokemonLab_Entrance_EventScript_GiveBigMushroom::
	removeitem ITEM_HEART_SCALE
	textcolor NPC_TEXT_COLOR_NEUTRAL
	msgbox CinnabarIsland_PokemonLab_Entrance_Text_HandedOverOneBigMushroom
	call EventScript_RestorePrevTextColor
	goto CinnabarIsland_PokemonLab_Entrance_EventScript_EndTutorMove
	end

CinnabarIsland_PokemonLab_Entrance_EventScript_GiveTinyMushrooms::
	removeitem ITEM_TINY_MUSHROOM, 2
	textcolor NPC_TEXT_COLOR_NEUTRAL
	msgbox CinnabarIsland_PokemonLab_Entrance_Text_HandedOverTwoTinyMushrooms
	call EventScript_RestorePrevTextColor
	goto CinnabarIsland_PokemonLab_Entrance_EventScript_EndTutorMove
	end

CinnabarIsland_PokemonLab_Entrance_EventScript_ChooseMushroom::
	message CinnabarIsland_PokemonLab_Entrance_Text_IllNeedMushroomOrTwo
	waitmessage
	multichoice 0, 0, MULTICHOICE_MUSHROOMS, TRUE
	switch VAR_RESULT
	case 0, CinnabarIsland_PokemonLab_Entrance_EventScript_GiveTinyMushrooms
	case 1, CinnabarIsland_PokemonLab_Entrance_EventScript_GiveBigMushroom
	end

CinnabarIsland_PokemonLab_Entrance_EventScript_NoMoveToTutorMon::
	msgbox CinnabarIsland_PokemonLab_Entrance_Text_NoMoveICanTeachThatMon
	goto CinnabarIsland_PokemonLab_Entrance_EventScript_ChooseMonToTutor
	end

CinnabarIsland_PokemonLab_Entrance_EventScript_CantTutorEgg::
	msgbox CinnabarIsland_PokemonLab_Entrance_Text_CantTeachAnEgg
	goto CinnabarIsland_PokemonLab_Entrance_EventScript_ChooseMonToTutor
	end

CinnabarIsland_PokemonLab_Entrance_EventScript_EndTutorMove::
	msgbox CinnabarIsland_PokemonLab_Entrance_Text_NeedMushroomOrTwoToLearnMove
	release
	end

CinnabarIsland_PokemonLab_Entrance_EventScript_SetHasBigMushroom::
	setflag HAS_BIG_MUSHROOM
	return

CinnabarIsland_PokemonLab_Entrance_EventScript_SetHasTinyMushrooms::
	setflag HAS_TINY_MUSHROOMS
	return

CinnabarIsland_PokemonLab_Entrance_EventScript_SetHasBothMushrooms::
	setflag HAS_BOTH_MUSHROOMS
	return
